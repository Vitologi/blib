{
    "block" : "bForm",
    "mods"  : {"style" : "default"},
    "meta": {
        "name": "databaseConfigForm",
        "tunnel": {},
        "method": "POST",
        "action": "/",
        "ajax": true,
        "select": {
            "list": [
                {"id":"test", "name":"testname"},
                {"id":"test2", "name":"testname2"},
                {"id":"test3", "name":"testname3"},
                {"id":"test4", "name":"testname4"},
                {"id":"test5", "name":"testname5"},
                {"id":"test6", "name":"testname6"},
                {"id":"test7", "name":"testname7"}
            ]
        },
        "items": []
    },
    "content": [

        {"elem":"hidden", "name":"id"},

        {"elem":"label", "content":"Группируем с пунктом", "attrs":{"title":"К какой группе меню принадлежит"}},
        {"elem":"select", "name":"menu", "select":"list", "key":"id", "show":["id", "name"]},

        {"elem":"label", "content":"Название", "attrs":{"title":"Название пункта меню"}},
        {"elem":"text", "name":"name"},

        {"elem":"label", "content":"Ссылка", "attrs":{"title":"На что ссылается пункт (если пусто, значит меню-контейнер}"}},
        {"elem":"text", "name":"link"},

        {"elem":"label", "content":"Настройки", "attrs":{"title":"Номер конфигурационных настроек"}},
        {"elem":"select", "name":"bconfig_id"},

        {"elem":"label", "content":"В какой пункт вложен", "attrs":{"title":"Корневой пункт меню (куда будет вложен}"}},
        {"elem":"selectplus", "name":"bmenu_id", "select":"list", "key":"id", "show":["name"]}
    ]
}
