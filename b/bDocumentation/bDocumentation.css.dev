.bMenu{
	display: block;
	padding: 0;
	margin:0;}
	
	.bMenu__child{
		display: none;
		padding: 0;
		margin:0;}
		
	.bMenu__item{
		cursor:pointer;
		list-style: none;
		word-wrap: break-word;}
		.bMenu__item_opened > .bMenu__child{
			display:block;
			position:absolute;
			margin: -1px 0 0 10px;}
		.bMenu__item_opened > .bMenu__link > .bMenu__flyout{
			border-color: #ffffff transparent;}
			
	.bMenu__link{
		display: block;
		text-decoration: none;
		color:black;}
		.bMenu__link-text{
			margin-right: 20px;}
		.bMenu__flyout{
			border-color: #909090 transparent;
			border-style: solid;
			border-width: 4px 4px 0 4px;
			width: 0;
			height: 0;
			float: right;
			margin: 0.4em 6px;}
	.bMenu__clear{
		display: block;
		clear:both;}

	
	
	
	.bMenu_position_horizontal{
		}
		.bMenu_position_horizontal >.bMenu__item{
			float:left;}
		.bMenu_position_horizontal  .bMenu__item > .bMenu__child{
			margin-top: -1.7em;
			margin-left: 100%;}
		.bMenu_position_horizontal >.bMenu__item > .bMenu__child{
			margin-top: 0;
			margin-left: 0px;}
		

	.bMenu_default{
		background-color:white;}
		.bMenu_default .bMenu__child{
			width:200px;
			background-color:white;
			border: 1px solid rgb(240, 240, 240);}
		.bMenu_default .bMenu__item{
			border-bottom: 1px dotted rgb(248, 248, 248);}
			.bMenu_default .bMenu__item:last-child{
				border-bottom: 0;}
		.bMenu_default .bMenu__link{
			padding:5px;}
		
		.bMenu_default .bMenu__item:hover,
		.bMenu_default .bMenu__item_active{
			background-color: rgb(240, 240, 240);}
		
