.bPanel{}
	.bPanel__side,
	.bPanel__parent,
	.bPanel__tools,
	.bPanel__content{
		overflow:auto;}
	.bPanel__blocks{}
	.bPanel__button{
		}
	.bPanel__blockLink{
		display:block;}
	.bPanel__error{
		text-align:center;
		overflow: auto;}
		
	
	.bPanel_style_default{}
		.bPanel_style_default .bPanel__side{
			float: left;
			padding: 5px;
			min-height: 500px;
			border-right: 1px solid rgb(190, 190, 190);}
		.bPanel_style_default .bPanel__parent{
			padding: 5px;}
		.bPanel_style_default .bPanel__tools{
			padding: 5px;}
		.bPanel_style_default .bPanel__content{
			padding: 5px;}
		.bPanel_style_default .bPanel__button{
			display:inline-block;
			margin:2px;}
		.bPanel_style_default .bPanel__blockLink{
			display: block;
			padding: 3px;
			background-color: rgb(231, 231, 231);
			border: 1px solid white;
			cursor: pointer;}
		.bPanel_style_default .bPanel__error{
			padding: 5px;
			border: 5px solid white;
			background-color: rgb(228, 228, 228);
			box-sizing: border-box;
			text-shadow: 1px 1px 0 white;
			font-weight: bold;
			color: rgb(134, 134, 134);}