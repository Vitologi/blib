.bPyonline{}
    .bPayonline__message{
        display: block;
        border: 1px solid rgb(228, 228, 228);
        min-height: 1em;
        text-align: center;
        margin: 5px;
        padding: 5px;}
    .bPayonline__detail{}
    .bPayonline__paysystem{
        position:relative;
        display: inline-block;
        margin: 5px;
        white-space: nowrap;}
    .bPayonline__paysystemOk{
        position: absolute;
        display: none;}
    .bPayonline__paysystemImage{
        border: 1px solid rgb(181, 181, 181);
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        box-shadow: 0 0 5px rgb(116, 116, 116);}
        .bPayonline__paysystem,
        .bPayonline__paysystemOk,
        .bPayonline__paysystemImage{
            max-width:100%;}
        .bPayonline__paysystem_selected > .bPayonline__paysystemOk{
            display: block;}
    .bPayonline__amount{}
    .bPayonline__submit{}
        .bPayonline__amount,
        .bPayonline__submit{
            margin: 5px 1%;
            text-align: center;
            font-size: 1.2em;
            max-width:100%;
            width: 47%;}

    .bPayonline_style_default{}
        .bPayonline_style_default center{
            margin: 5px;
            padding: 5px;
            border: 1px solid #e2e2e2;
            border-top: 0;
            box-shadow: 0 0 2px rgb(216, 216, 216);}