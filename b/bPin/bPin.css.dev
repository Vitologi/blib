
input, button {
    outline:0;
    margin: 0;
    vertical-align: middle;}

.bPin {
    display:inline-block;
    word-wrap:break-word;
    max-width: 100%;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    -o-box-sizing: border-box;
    box-sizing: border-box;
    border:0;
    outline:0 !important;
    text-decoration: none;
    cursor:pointer;
    text-align: center;
	
	-webkit-user-select: none;
	-moz-user-select: none;
	-khtml-user-select: none;
	user-select: none;

    padding: 4px 12px;
    border-radius: 3px;
    border-width:1px;
	border-style:solid;
    border-color: rgba(255,255,255,0.8) rgba(0, 0, 0, 0.07) rgba(0, 0, 0, 0.2)  rgba(0, 0, 0, 0.07);
    background: #e5e5e5;
    box-shadow:#ddd 0 1px 1px;}
	.bPin:active {
		padding: 5px 12px 3px;
		box-shadow: 0 1px 1px rgba(0,0,0,.1) inset;}
	.bPin:focus {
		box-shadow: 0 -2px 2px rgba(0,0,0,.05) inset;
		border: 1px solid #ddd;}

	/* Размер кнопок */
	.bPin_size_small {font-size: 0.5em;}	
	.bPin_size_big {font-size: 2em;}
	
	/* Смещение кнопки */
	.bPin_left{
		float:left;}
	.bPin_right{
		float:right;}
	
	/* Отключенная */
	.bPin_disabled{
		cursor:help;
		padding: 4px 12px;
		border-radius: 3px;
		border-width:1px;
		border-style:solid;
		border-color: rgba(255,255,255,0.8) rgba(0, 0, 0, 0.07) rgba(0, 0, 0, 0.2)  rgba(0, 0, 0, 0.07);
		background: #e5e5e5;
		box-shadow:#ddd 0 1px 1px;
		color: #CCCCCC;}
		.bPin_disabled:active {
			padding: 4px 12px;
			box-shadow: #ddd 0 1px 1px;}
		.bPin_disabled:focus {
			box-shadow: #ddd 0 1px 1px;
			border-width:1px;
			border-style:solid;
			border-color: rgba(255,255,255,0.8) rgba(0, 0, 0, 0.07) rgba(0, 0, 0, 0.2)  rgba(0, 0, 0, 0.07);}
	
	/* Подсказка */
	.bPin_helper_default[alt]:hover:after {
			content: attr(alt);
			position: absolute;
			z-index: 999;
			white-space: nowrap;
			margin: -4px 0 0 14px;
			padding: inherit;
			color: black;
			background: #F2F2F2;
			border: 1px solid #CCCCCC;
			opacity: 0.5;}
	
	/* Стили отображения кноки */
	.bPin_style_default {
		color: #525252;
		text-shadow: 0 1px #fff;
		background: -webkit-gradient(linear, left top, left bottom, from(#ededed), to(#dcdcdc));
		background: -webkit-linear-gradient(top, #ededed, #dcdcdc);
		background: -moz-linear-gradient(top, #ededed, #dcdcdc);
		background: -o-linear-gradient(top, #ededed, #dcdcdc);
		background: linear-gradient(top, #ededed, #dcdcdc);}
		.bPin_style_default:hover{
			color: rgb(27, 158, 27);}
	
	.bPin_style_bad{
		background: rgb(255,173,173);
		background: -moz-linear-gradient(top,  rgba(255,173,173,1) 0%, rgba(255,216,216,1) 50%, rgba(255,173,173,1) 100%);
		background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(255,173,173,1)), color-stop(50%,rgba(255,216,216,1)), color-stop(100%,rgba(255,173,173,1)));
		background: -webkit-linear-gradient(top,  rgba(255,173,173,1) 0%,rgba(255,216,216,1) 50%,rgba(255,173,173,1) 100%);
		background: -o-linear-gradient(top,  rgba(255,173,173,1) 0%,rgba(255,216,216,1) 50%,rgba(255,173,173,1) 100%);
		background: -ms-linear-gradient(top,  rgba(255,173,173,1) 0%,rgba(255,216,216,1) 50%,rgba(255,173,173,1) 100%);
		background: linear-gradient(to bottom,  rgba(255,173,173,1) 0%,rgba(255,216,216,1) 50%,rgba(255,173,173,1) 100%);
		filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffadad', endColorstr='#ffadad',GradientType=0 );}
	
	.bPin_style_good{
		background: rgb(152,226,185);
		background: -moz-linear-gradient(top,  rgba(152,226,185,1) 0%, rgba(205,242,205,1) 50%, rgba(152,226,185,1) 100%);
		background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(152,226,185,1)), color-stop(50%,rgba(205,242,205,1)), color-stop(100%,rgba(152,226,185,1)));
		background: -webkit-linear-gradient(top,  rgba(152,226,185,1) 0%,rgba(205,242,205,1) 50%,rgba(152,226,185,1) 100%);
		background: -o-linear-gradient(top,  rgba(152,226,185,1) 0%,rgba(205,242,205,1) 50%,rgba(152,226,185,1) 100%);
		background: -ms-linear-gradient(top,  rgba(152,226,185,1) 0%,rgba(205,242,205,1) 50%,rgba(152,226,185,1) 100%);
		background: linear-gradient(to bottom,  rgba(152,226,185,1) 0%,rgba(205,242,205,1) 50%,rgba(152,226,185,1) 100%);
		filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#98e2b9', endColorstr='#98e2b9',GradientType=0 );}
